<h1>PRODUCTOS</h1>

<div class="d-flex flex-row flex-wrap container">
  {{#each products}}
    <div class="border-1 border m-1 p-2">
      <h4 class="">{{title}}</h4>
      <img src={{img}} alt="">
      <p>{{description}}</p>
      <p>{{price}}</p>
      <a href="/products/{{_id}}">
      <button>Detalles</button>
      </a>
    </div>
  {{/each}}
</div>
<div class="container d-flex "> 
 
  {{#if prevPage}}
    <a href={{prevLink}}>
      <button>Anterior</button>
    </a>
  {{/if}}
  <p class="mx-2 ">Page {{this.page}}</p>
  {{#if nextPage}}
    <a href={{nextLink}}>
      <button>Siguiente</button>
    </a>
  {{/if}}
</div>